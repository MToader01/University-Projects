@model IEnumerable<Proiect3.Models.ProductModel>

@{
    ViewBag.Title = "Cart";
}
<style>
    body {
        background-image: url(../../Resurse/background.jpg);
        background-size: cover;
    }
</style>


<h2>Cart</h2>

<table class="table" style="background-color: white; opacity:85%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

        </tr>
    }
</table>

<p class="btn btn-default">@Html.ActionLink("Buy", "Buy")</p>
<p class="btn btn-default">@Html.ActionLink("Clear", "Clear")</p>
