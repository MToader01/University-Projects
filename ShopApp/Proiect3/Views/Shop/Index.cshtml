@model IEnumerable<Proiect3.Models.ProductModel>

@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background-image: url(../../Resurse/background.jpg);
        background-size: cover;
    }
</style>


<h2>Products:</h2>
@if (LoginState.isAdmin == true)
{
    <p>
        @Html.ActionLink("Add New Product", "Create")
    </p>
}
<table class="table" style="background-color: white; opacity:85%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @if (LoginState.isLoggedIn == true)
                {
                    <span>| @Html.ActionLink("Add to cart", "Buy", new { id = item.Id }) </span>
                }
                @if (LoginState.isAdmin == true)
                {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
                </td>
            </tr>
        }
</table>
